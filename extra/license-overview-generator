#!/usr/bin/python3

import argparse
import datetime
import hashlib
import json
import os
import re
import subprocess
import sys

# Only do basic checks on these.
OTHER_REPOS = [ 'mender-api-gateway-docker', 'integration', 'mender-conductor' ]
# We don't currently care about these.
IGNORE_REPOS = [ 'mender-conductor-enterprise' ]

# The directories to look in.
DIRS = [os.path.join(os.path.dirname(sys.argv[0]), "../..")]

# Candidates for license files.
LICENSE_CANDIDATES = [ "LICENSE", "LICENCE", "LICENSE.txt", "LICENSE.md", "COPYING" ]

# A dictionary of the licenses we have collected, key is module, value is text.
LICENSES = {}

# A dictionary of license files we have covered.
LICENSE_FILES_COVERED = {}

CALLED_FROM_RELEASE_TOOL = False


